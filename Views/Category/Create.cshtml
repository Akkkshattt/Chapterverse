@model Category


    <form action="/" method="post">
    <div class=" pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="p-0">Create Category</h2>
            <hr />
        </div>
        <div class="row pb-2 mb-4">
            <label class="fs-5 p-0">Category Name</label>
            <input type="text" class="form-control"/>
        </div>
        <div class="row pb-2 mb-4">
            <label class="fs-5 p-0">Category Display Order</labe>
            <input type="text" class="form-control" />
        </div>
        <div class="row gap-4">
            <div class="col-6 border text-center w-25">
                <button type="submit" class="btn">CREATE CATEGORY</button>
            </div>
            <div class="col-6 border text-center w-25">
                <a class="text-white" asp-controller="Category" asp-action="Index">GO TO LIST</a>
            </div>
        </div>
    </div>    
    </form>

