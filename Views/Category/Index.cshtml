@* @model List<Chapterverse.Models.Category> *@
@model List<Category>

<div class="container">

<div class="row pt-4 pb-2 border-light ">
    <div class="col-6 ">
            <h4 class="">Category List</h4>
    </div>
    <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class=" btn py-3 px-4 btn-light"><i class="bi bi-plus-circle px-2"></i>CREATE NEW CATEGORY</a>
    </div>
</div>


<table class="mt-5 text-center table table-bordered table-striped">
   <thead>
    <tr>
        <th>Serial No.</th>
        <th>Category Name</th>
        <th>Display Order</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>
</div>